#!/usr/bin/env bash

echo "Building into"
ROOT=$(pwd)

cd $1
echo "Bundling $1/$2 into $3"

#TODO: Refactor out all these hardcoded node modules paths
NODE_PATH=$NODE_PATH:"$(pwd)/node_modules/":"$(pwd)/../lib/" ${ROOT}/node_modules/.bin/browserify -u=z3javascript -u=electron -u=process $2 --outfile $3
